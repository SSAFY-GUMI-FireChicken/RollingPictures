        <ImageView
            android:layout_width="@dimen/palette_color_size"
            android:layout_height="@dimen/palette_color_size"
            android:background="@color/palette_blue"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="@dimen/palette_color_size"
            android:layout_height="@dimen/palette_color_size"
            android:background="@color/palette_black"/>

        <ImageView
            android:layout_width="@dimen/palette_color_size"
            android:layout_height="@dimen/palette_color_size"
            android:background="@color/palette_white"/>

        <ImageView
            android:layout_width="@dimen/palette_color_size"
