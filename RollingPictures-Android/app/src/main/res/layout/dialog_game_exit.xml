<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_exit_dialog"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/exitTitleTextView"
        style="@style/Text.TitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/gmarket_sans_medium"
        android:text="게임방을 나가시겠습니까?"
        android:layout_gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/exitSubtitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/gmarket_sans_medium"
        android:text="입장 페이지로 이동하며,\n코드를 통해 다시 들어올 수 있습니다."
        android:textColor="@color/cyan_deep_dark"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/dialog_exit_button"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/gmarket_sans_medium"
            android:text="나가기"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:background="#428188"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp" />


        <TextView
            android:id="@+id/dialog_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/gmarket_sans_medium"
            android:text="취소"
            android:textColor="#D32F2F"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>