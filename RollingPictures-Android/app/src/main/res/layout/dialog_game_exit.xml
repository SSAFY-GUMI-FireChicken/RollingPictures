<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_exit_dialog"
    android:orientation="vertical"
    android:padding="@dimen/padding_size_20"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/exitTitleTextView"
        style="@style/Text.DialogTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/fab_margin"
        android:layout_marginTop="@dimen/margin_size_32"
        android:text="게임방을 나가시겠습니까?"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/exitSubtitleTextView"
        style="@style/Text.DialogSubTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_20"
        android:layout_marginHorizontal="@dimen/fab_margin"
        android:text="입장 페이지로 이동하며,\n코드를 통해 다시 들어올 수 있습니다." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_size_50"
        android:layout_marginBottom="@dimen/margin_size_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_exit_button"
            style="@style/Text.DialogButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="나가기" />

        <View
            android:background="@color/cyan_deep_dark"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginStart="@dimen/margin_size_30"
            android:layout_marginEnd="@dimen/margin_size_30" />

        <TextView
            android:id="@+id/dialog_cancel_button"
            style="@style/Text.DialogButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="취소"
            android:textColor="@color/red_medium" />

    </LinearLayout>

</LinearLayout>