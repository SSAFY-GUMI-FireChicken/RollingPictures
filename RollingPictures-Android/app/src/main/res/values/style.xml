<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text.TitleStyle" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gmarket_sans_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.EditTextHintStyle" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:fontFamily">@font/gmarket_sans_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.ButtonOkStyle" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/cyan_deep_dark</item>
        <item name="android:fontFamily">@font/gmarket_sans_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.ExitStyle" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/gmarket_sans_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.RoundText" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Text.PlayerText" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/gmarket_sans_medium</item>
        <item name="android:textColor">@color/green_deep_dark</item>
    </style>

    <style name="Text.DialogTitleStyle" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dialog_title_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gmarket_sans_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.DialogSubTitleStyle" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/dialog_subtitle_text_size</item>
        <item name="android:textColor">@color/cyan_deep_dark</item>
        <item name="android:fontFamily">@font/gmarket_sans_medium</item>
    </style>

    <style name="Text.DialogButtonStyle" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/dialog_subtitle_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gmarket_sans_medium</item>
    </style>

</resources>